{
  "name": "docker-gen-file",
  "version": "1.0.0",
  "description": "Generate Docker & Docker-Compose File For Your Application",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": "dist/index.js",
  "scripts": {
    "prepublish": "tsc",
    "build": "tsc",
    "watch": "tsc -w",
    "start": "node dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install",
    "lint": "eslint --fix \"./src/**/*.{js,ts,json}\"",
    "format": "prettier --write \"./src/**/*.{js,ts,json,md}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ferin79/docker-gen-file.git"
  },
  "keywords": [
    "docker",
    "docker-compose",
    "dockerfile",
    "node-docker",
    "gen-dockerfile",
    "gen-docker"
  ],
  "author": "Ferin Patel",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Ferin79/docker-gen-file/issues"
  },
  "homepage": "https://github.com/Ferin79/docker-gen-file#readme",
  "devDependencies": {
    "@types/inquirer": "^7.3.1",
    "@types/node": "^15.3.0",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "eslint": "^7.26.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "organize-imports-cli": "^0.8.0",
    "prettier": "^2.3.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "inquirer": "^8.0.0"
  },
  "lint-staged": {
    "./src/**/*.{ts,js}": [
      "eslint --cache --fix"
    ],
    "./src/**/*.{ts,js,css,md}": [
      "prettier --write",
      "organize-imports-cli"
    ]
  }
}
